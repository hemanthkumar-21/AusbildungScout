# Backend Environment Configuration
# Copy this to .env and fill in your values

# Server
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ausbildungscout

# Frontend
FRONTEND_URL=http://localhost:3000

# AI/Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Scraper Configuration (for Miner mode)
SCRAPER_ENABLED=false
SCRAPER_MIN_DELAY_MS=2000
SCRAPER_MAX_DELAY_MS=5000

# Demo Mode (disables real scraping on production)
DEMO_MODE=true
